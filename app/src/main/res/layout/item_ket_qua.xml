    <TextView
        android:id="@+id/diemB"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textAlignment="center"
        android:gravity="center_horizontal"></TextView>
    <TextView
        android:id="@+id/diemC"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textAlignment="center"
        android:gravity="center_horizontal"></TextView>
    <TextView
        android:id="@+id/diemD"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textAlignment="center"
        android:gravity="center_horizontal"></TextView>

</LinearLayout>